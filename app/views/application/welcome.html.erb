<div class='row'>
  <div class='col-md-12'>
    <h2>Welcome to Recipe Cat!</h2>

    <%= render partial: 'trademark' %>

    <% if user_signed_in? %>
      <p>You are logged in as <%= @user_name %>.</p>
    <% else %>
      <p>
        <%= link_to 'Log In',  new_user_session_path %><br>
        <%= link_to 'Sign Up', new_user_registration_path %><br>
        <%= link_to 'Log in with Facebook', user_facebook_omniauth_authorize_path, method: :post %>
      </p>
    <% end %>
  </div>
</div>
